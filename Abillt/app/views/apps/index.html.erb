<p id="notice"><%= notice %></p>

<h1>Listing Apps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr class="<%= cycle('list-line-odd', 'list-line-even')%>">
        <td class="list-description">
        <dl>
          <dt><%= app.name %></dt>
          <ul><%= app.rating %></ul>
          <ul><%= app.price %></ul>
          <td><%= image_tag app.image.url(:thumb) %></td>
        </dl>
        
        <td class="image-description">
          <%= image_tag app.image_url, :class => 'list-image' %>
        </td>

      <td class="list-actions">
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

